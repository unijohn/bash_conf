

force_color_prompt=yes

if [ -n "$force_color_prompt" ]; then
  if [ -x /usr/bin/tput ] && tput setaf 1 >&/dev/null; then
    color_prompt=yes

  else
    color_prompt=

  fi
fi

if [ "$color_prompt" = yes ]; then
  PS1="\e[95m(dev)\e[0m \u@\e[0m\e[36m\h\e[0m:\w: "

else
  PS1="\e[96m(dev) \e[101m\u\e[0m@\e[36m\h\e[0m:\w$ "

fi

unset color_prompt force_color_prompt

# Python-Related Functionality

if [ -e /opt/rh/rh-python35/enable ]; then
  echo "Enabling Python 3.5"
  source /opt/rh/python35/enable


  export WORKON_HOME=$HOME/.venv
  export VIRTUALENVWRAPPER_VIRTUALENV=$WORKON_HOME

  export VIRTUALENVWRAPPER_PYTHON=/opt/rh/rh-python35/root/usr/bin/python3  

  # PIP Settings
  export PIP_REQUIRE_VIRTUALENV=true
  export PIP_RESPECT_VIRTUALENV=true

fi

